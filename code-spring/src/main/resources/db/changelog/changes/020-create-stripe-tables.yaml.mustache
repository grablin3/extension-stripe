databaseChangeLog:
  - changeSet:
      id: 020-create-subscriptions-table
      author: genesis3
      preConditions:
        - onFail: MARK_RAN
        - not:
            tableExists:
              tableName: subscriptions
      changes:
        - createTable:
            tableName: subscriptions
            columns:
              # BaseEntity fields
              - column:
                  name: id
                  type: BIGINT
                  autoIncrement: true
                  constraints:
                    primaryKey: true
                    nullable: false
              - column:
                  name: deleted
                  type: BOOLEAN
                  defaultValueBoolean: false
                  constraints:
                    nullable: false
              - column:
                  name: delete_reason
                  type: TEXT
              - column:
                  name: tenant_id
                  type: TEXT
              - column:
                  name: created_time
                  type: BIGINT
                  defaultValueComputed: "EXTRACT(EPOCH FROM NOW()) * 1000"
                  constraints:
                    nullable: false
              - column:
                  name: modified_time
                  type: BIGINT
                  defaultValueComputed: "EXTRACT(EPOCH FROM NOW()) * 1000"
                  constraints:
                    nullable: false
              - column:
                  name: created_by
                  type: TEXT
              - column:
                  name: modified_by
                  type: TEXT
              - column:
                  name: slug
                  type: TEXT
              # SubscriptionEntity specific fields
              - column:
                  name: stripe_subscription_id
                  type: VARCHAR(255)
                  constraints:
                    nullable: false
                    unique: true
              - column:
                  name: stripe_customer_id
                  type: VARCHAR(255)
                  constraints:
                    nullable: false
              - column:
                  name: user_id
                  type: BIGINT
                  constraints:
                    nullable: false
                    foreignKeyName: fk_subscription_user
                    references: users(id)
              - column:
                  name: status
                  type: VARCHAR(30)
                  constraints:
                    nullable: false
              - column:
                  name: stripe_price_id
                  type: VARCHAR(255)
                  constraints:
                    nullable: false
              - column:
                  name: stripe_product_id
                  type: VARCHAR(255)
              - column:
                  name: current_period_start
                  type: BIGINT
              - column:
                  name: current_period_end
                  type: BIGINT
              - column:
                  name: cancel_at_period_end
                  type: BOOLEAN
                  defaultValueBoolean: false
                  constraints:
                    nullable: false
              - column:
                  name: canceled_at
                  type: BIGINT
              - column:
                  name: trial_start
                  type: BIGINT
              - column:
                  name: trial_end
                  type: BIGINT
        - createIndex:
            schemaName: {{boundBackendModule.moduleId}}
            indexName: idx_subscription_stripe_id
            tableName: subscriptions
            columns:
              - column:
                  name: stripe_subscription_id
        - createIndex:
            schemaName: {{boundBackendModule.moduleId}}
            indexName: idx_subscription_customer_id
            tableName: subscriptions
            columns:
              - column:
                  name: stripe_customer_id
        - createIndex:
            schemaName: {{boundBackendModule.moduleId}}
            indexName: idx_subscription_user_id
            tableName: subscriptions
            columns:
              - column:
                  name: user_id
        - createIndex:
            schemaName: {{boundBackendModule.moduleId}}
            indexName: idx_subscription_status
            tableName: subscriptions
            columns:
              - column:
                  name: status

